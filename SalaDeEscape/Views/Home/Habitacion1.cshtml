    ViewData["Title"] = "Habitacion";
}

  
</html>

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Bootstrap demo</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
  </head>

  <body class="body2">

  
    <h1 class="h12">@ViewBag.Titulo </h1>

    <p class="p2">@ViewBag.Desc</p>


    <div class="contenedor">
        <img src=@ViewBag.Img alt="Imagen Revelada" class="imagen-revelada">
        <div class="cursor"></div>
    </div>
    <script>
        document.addEventListener('mousemove', function(e) {
            const cursor = document.querySelector('.cursor');
            cursor.style.left = `${e.pageX - cursor.offsetWidth / 2}px`;
            cursor.style.top = `${e.pageY - cursor.offsetHeight / 2}px`;
            document.querySelector('.imagen-revelada').style.clipPath = `circle(50px at ${e.pageX}px ${e.pageY}px)`;
        });
    </script>

    
    <form method="post" action='@Url.Action("Habitacion")'>
      <input type="hidden" name="sala" value=@ViewBag.Sala>
        <input type="text" name="clave" placeholder="Tu respuesta"/>
        <div class="col-12">
            <button class="btn btn-primary" type="submit">Validar respuesta</button>
        </div>
    </form>


    <button type="button" class="btn btn-lg btn-danger" data-bs-toggle="popover" data-bs-title="Popover title" data-bs-content= "@ViewBag.Pista1" >Click to toggle popover</button>

    <button type="button" class="btn btn-lg btn-danger" data-bs-toggle="popover" data-bs-title="Popover title" data-bs-content="@ViewBag.Pista1">Click to toggle popover</button>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
  </body>
</html>